@model Setting
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">  <a class="btn btn-primary mb-3" asp-area="admin" asp-controller="Setting" asp-action="Create">Create</a> </div>

        <div class="col-lg-12 mt-5">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Logo</th>
                        <th scope="col">Address</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Email</th>
                        <th scope="col">Address2</th>
                        <th scope="col">Phone2</th>
                        <th scope="col">Email2</th>
                        <th scope="col">About</th>
                        <th scope="col"></th>


                    </tr>
                </thead>
                <tbody>


                    <tr>
                        <th scope="row"></th>
                        <td><img src="~/Uploads/@Model.Logo" alt="" width="150" /> </td>
                        <td>@Model.Addresss</td>
                        <td>@Model.Phone</td>
                        <td>@Model.Email</td>
                        <td>@Model.Addresss2</td>
                        <td>@Model.Phone2</td>
                        <td>@Model.Email2</td>
                        <td>@Model.About</td>
                        <td>
                            <a class="btn btn-success" asp-area="admin" asp-controller="Setting" asp-action="Update" asp-route-id="@Model.Id">Update</a>
                            <a class="btn btn-danger" asp-area="admin" asp-controller="Setting" asp-action="Delete" asp-route-id="@Model.Id" onclick="return confirm('Are You Sure?')">Delete</a>

                        </td>
                    </tr>




                </tbody>
            </table>
        </div>
    </div>


