@model List<RestaurantManager>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <a class="btn btn-primary mb-3" asp-area="admin" asp-controller="Manager" asp-action="Create">Create</a>
        </div>
        <hr />
        <div class="col-lg-12 mt-3">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">Name</th>
                        <th scope="col">SurName</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Email</th>
                        <th scope="col">Website</th>
                        <th scope="col">Restaurant Name</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 1;
                        foreach (var manager in Model)
                        {
                                        <tr>
                                            <th scope="row">@i</th>
                                            <td><img src="~/Uploads/@manager.Image" style="width:150px; max-height:150px;" /></td>
                                            <td>@manager.Name</td>
                                            <td>@manager.SurName</td>
                                            <td>@manager.Phone</td>
                                            <td>@manager.Email</td>
                                            <td>@manager.WebSite</td>
                                            <td>@manager.Restaurant.Name</td>
                                            <td>
                                                <a class="btn btn-success" asp-area="admin" asp-controller="Manager" asp-action="Update" asp-route-id="@manager.Id">Update</a>
                                                <a class="btn btn-danger" asp-area="admin" asp-controller="Manager" asp-action="Delete" asp-route-id="@manager.Id" onclick="return confirm('Are you sure?')">Delete</a>
                                            </td>
                                        </tr>
                        }
                        i++;
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>



