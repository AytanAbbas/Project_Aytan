@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <a class="btn btn-primary mb-3" asp-area="admin" asp-controller="Blog" asp-action="Create">Create</a>
        </div>
        <hr />
        <div class="col-lg-12 mt-3">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">Title</th>
                        <th scope="col">Content</th>
                        <th scope="col">CreatedDate</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 1;

                        foreach (var blog in Model)
                        {
                            <tr>
                                <th scope="row">@i</th>
                                <td><img src="~/Uploads/@blog.Image" style="width:150px;max-height:150px;" alt="Alternate Text" /></td>
                                <td style="max-width:200px;">@blog.Title</td>
                                <td style="max-width:400px;">@(blog.Content.Length > 300 ? blog.Content.Substring(0, 300) + " ..." : blog.Content)</td>
                                <td>@blog.CreatedDate.ToString("dd/ MMMM /yyy")</td>
                                <td>
                                    <a class="btn btn-success" asp-area="admin" asp-controller="Blog" asp-action="Update" asp-route-id="@blog.Id">Update</a>
                                    <a class="btn btn-danger" asp-area="admin" asp-controller="Blog" asp-action="Delete" asp-route-id="@blog.Id" onclick="return confirm('Are you sure?')">Delete</a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

