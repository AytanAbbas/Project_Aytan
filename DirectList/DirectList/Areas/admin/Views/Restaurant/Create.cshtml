@model Restaurant
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <form asp-area="admin" asp-controller="Restaurant" asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="@Model.RestaurantImageFile" class="form-label">Image</label>
                    <input class="form-control" asp-for="@Model.RestaurantImageFile" multiple>
                    <span asp-validation-for="@Model.RestaurantImageFile" class="text-danger"></span>
                </div>


                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label">Name</label>
                    <input class="form-control" asp-for="@Model.Name">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Address" class="form-label">Address</label>
                    <input class="form-control" asp-for="@Model.Address">
                    <span asp-validation-for="@Model.Address" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.About" class="form-label">About</label>
                    <input class="form-control" asp-for="@Model.About">
                    <span asp-validation-for="@Model.About" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.CompaintPhone" class="form-label">CompaintPh</label>
                    <input type="tel" class="form-control" asp-for="@Model.CompaintPhone">
                    <span asp-validation-for="@Model.CompaintPhone" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.ReceptionPhone" class="form-label">ReceptionPh</label>
                    <input type="tel" class="form-control" asp-for="@Model.ReceptionPhone">
                    <span asp-validation-for="@Model.ReceptionPhone" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.SupportPhone" class="form-label">SupportPh</label>
                    <input type="tel" class="form-control" asp-for="@Model.SupportPhone">
                    <span asp-validation-for="@Model.SupportPhone" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.StartDate" class="form-label">StartDate</label>
                    <input class="form-control" asp-for="@Model.StartDate">
                    <span asp-validation-for="@Model.StartDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.EndDate" class="form-label">EndDate</label>
                    <input class="form-control" asp-for="@Model.EndDate">
                    <span asp-validation-for="@Model.EndDate" class="text-danger"></span>
                </div>


                <div class="mb-3">
                    <label asp-for="@Model.Location" class="form-label">Location</label>
                    <input class="form-control" asp-for="@Model.Location">
                    <span asp-validation-for="@Model.Location" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.LocationNote" class="form-label">LocationNote</label>
                    <textarea class="form-control" asp-for="@Model.LocationNote" rows="3"></textarea>
                    <span asp-validation-for="@Model.LocationNote" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.TagToRestaurantId" class="form-label">Tags</label>
                    <select class="form-control mb-3 selectTwo" aria-label="Default select example" multiple="multiple" asp-for="@Model.TagToRestaurantId">
                        @foreach (var item in ViewBag.Tags)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.FeatureToRestaurantId" class="form-label">Feature</label>
                    <select class="form-control mb-3 selectTwo" aria-label="Default select example" multiple="multiple" asp-for="@Model.FeatureToRestaurantId">
                        @foreach (var item in ViewBag.Feature)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-area="admin" asp-controller="Restaurant" asp-action="Index">Back to list</a>
            </form>
        </div>
    </div>
</div>


