@model MenuToRestaurant
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <form asp-area="admin" asp-controller="MenuToRestaurant" asp-action="Create" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="@Model.Price" class="form-label">Price</label>
                    <input class="form-control" asp-for="@Model.Price" multiple>
                    <span asp-validation-for="@Model.Price" class="text-danger"></span>
                </div>


                <div class="mb-3">
                    <label asp-for="@Model.Description" class="form-label">Description</label>
                    <input class="form-control" asp-for="@Model.Description">
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Menu.Name" class="form-label">Menu</label>
                    <select class="form-control mb-3 selectTwo"  asp-for="@Model.MenuId" asp-items="@(new SelectList(ViewBag.Menu,"Id","Name"))">
                        <option selected disabled>Select Menu</option>
                    </select>
                    <span asp-validation-for="@Model.Menu.Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Restaurant.Name" class="form-label">Restaurant</label>
                    <select class="form-control mb-3 selectTwo"  asp-for="@Model.RestaurantId" asp-items="@(new SelectList(ViewBag.Restaurant,"Id","Name"))">
                        <option selected disabled>Select Restaurant</option>
                    </select>
                    <span asp-validation-for="@Model.Restaurant.Name" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-area="admin" asp-controller="MenuToRestaurant" asp-action="Index">Back to list</a>
            </form>
        </div>
    </div>
</div>
