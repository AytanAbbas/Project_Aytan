@model List<MenuToRestaurant>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <a class="btn btn-primary mb-3" asp-area="admin" asp-controller="MenuToRestaurant" asp-action="Create">Create</a>
        </div>
        <hr />
        <div class="col-lg-12 mt-3">
            <table class="table" style="overflow:auto;">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Price</th>
                        <th scope="col">Description</th>
                        <th scope="col">RestaurantName</th>
                        <th scope="col">MenuName</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 1;
                        if (Model != null)
                        {
                            foreach (var menuToRestaurant in Model)
                            {
                                        <tr>
                                            <th scope="row">@i</th>

                                            <td style="max-width:200px;">@menuToRestaurant.Price</td>
                                            <td style="max-width:200px;">@menuToRestaurant.Description</td>
                                            <td style="max-width:200px;">@menuToRestaurant.Menu.Name</td>
                                            <td style="max-width:200px;">@menuToRestaurant.Restaurant.Name</td>
                                            <td>
                                                <a class="btn btn-success" asp-area="admin" asp-controller="MenuToRestaurant" asp-action="Update" asp-route-id="@menuToRestaurant.Id">Update</a>
                                                <a class="btn btn-danger" asp-area="admin" asp-controller="MenuToRestaurant" asp-action="Delete" asp-route-id="@menuToRestaurant.Id" onclick="return confirm('Are you sure?')">Delete</a>
                                            </td>
                                        </tr>
                                i++;
                            }
                        }
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>



